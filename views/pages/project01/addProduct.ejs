<%- include('./includes/head.ejs') %>
<body>
    <%- include('./includes/navigation.ejs') %>
    <div class="addProductForm">
        <form action="/project01/admin/addProduct" method="POST" name="addProduct">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <div class="addProduct">
                <label for="productName">Name</label>
                <input type="text" name='productName' id='productName' placeholder="Product Name">
            </div>

            <div class='addProduct'>
                <label for='itemDescription'>Item Description</label>
                <textarea name='itemDescription' id='itemDescription' placeholder="Item Description" rows="6"></textarea>
            </div>

            <div class='addProduct'>
                <label for='price'>Price: $</label>
                <input type="number" step=".01" name="price" id="price">
            </div>

            <div class='addProduct'>
                <label for='productImage'>Image URL</label>
                <input type="text" name=productImage id='productImage'>
            </div>
            
            <div class='addProduct'>
                <button type="submit">Submit Product    </button>
            </div>
        </form>
    </div>
</body>
</html>