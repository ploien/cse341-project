<%- include('./includes/head.ejs') %>
<body>

    <%- include('./includes/navigation.ejs') %>
    <div class='productList'>
        <% if (prods && prods.length > 0) { %>
            <% for (let product of prods) { %>
                <article class='productCard'>
                    <div>
                        <h1 class='productName'><%= product.productName %></h1>
                    </div>
                    <div>
                        <p class="productDescription"><%= product.itemDescription %></p>
                    </div>
                    <div>
                        <img src="<%= product.imageURL %>" alt="<%= product.productName %>">
                    </div>
                    <div>
                        <p class="productPrice">$<%= product.price %></p>
                    </div>
                    <div class="formActions">
                        <a href='./editProduct/<%= product._id %>' class="button">Edit</a>
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <form action='./deleteProduct' method='POST'>
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <input type="hidden" value="<%=product._id%>" name="productId" id="productId">
                            <button class="button" type="submit">Delete</button>
                        </form>
                    </div>
                </article>
            <% } %>
        <% } else { %>
            <h1>No Products Found</h1>
        <% } %>
    </div>
</body>
</html>