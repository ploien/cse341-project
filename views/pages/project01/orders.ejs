<%- include('./includes/head.ejs') %>
    <body>
        <%- include('./includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>No orders found.</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1># <%= order.id %></h1>
                            <ul>
                                <% order.products.forEach( product => { %>
                                    <li><%= product.productName %> ( <%= product.orderItem.quantity %> )</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        </body>
</html>